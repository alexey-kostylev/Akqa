@model Akqa.Web.Models.ConvertingModel 

@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x=>x.Number, new { @class = "control-label" })
        @Html.TextBoxFor(x=>x.Number, new { @class="form-control"})
        @Html.ValidationMessageFor(model => model.Number, null, new { @class = "text-danger" })
    </div>

    <input class="btn btn-primary"  type="submit" value="Convert">
}

        